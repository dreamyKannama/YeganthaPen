<!-- post details display-->
<section id="homeCard" >
  <div id="homeCard">
    <a href="/blog/"> 
      <img id="image-cards" alt="blog" src="/images/blogcard.jpg" width="220" height="280" >
    </a>
    <a href="/sketches/"> 
      <img id="image-cards" alt="sketches" src="/images/sketchcard.jpg" width="220" height="280">
    </a>
  </div> 
</section>

<section id="about">
  <% if (config.description) { %>
    <%- markdown(config.description) %>
  <% } %>
  <p style="display: inline">
    <% if (theme.customize.social_links) { %>
      Find me on
      <ul id="sociallinks">
        <% for(var i in theme.customize.social_links) { %>
          <li><a class="icon" target="_blank" href="<%- url_for(theme.customize.social_links[i]) %>" title="<%= i %>"><i class="fa fa-<%= i %>"></i></a></li>
        <% } %>
      </ul>.
    <% } %>
  </p>
</section>

